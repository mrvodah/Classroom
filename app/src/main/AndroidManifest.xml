<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DetailScreen"
            android:label="Chi tiết" />
        <activity
            android:name=".LessonScreen"
            android:label="Khóa học" />
        <activity
            android:name=".Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Announcements"
            android:configChanges="orientation|screenSize"
            android:label="Announcements" />
        <activity
            android:name=".Lectures"
            android:configChanges="orientation|screenSize"
            android:label="Lectures" />
        <activity
            android:name=".Events"
            android:configChanges="orientation|screenSize"
            android:label="Events" />
        <activity
            android:name=".Courses"
            android:configChanges="orientation|screenSize"
            android:label="Khóa học" />
        <activity
            android:name=".MyProfile"
            android:configChanges="orientation|screenSize"
            android:label="Thông tin" />
        <activity
            android:name=".Home"
            android:label="Trang chủ"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignupScreen"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".LoginScreen"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>